{
    "version": "0.2.3",
    "description": "HTTP Request client based on XMLHttpRequest object and fetch implementation in the browser and node-fetch implementation for node js environement",
    "license": "MIT",
    "name": "@azlabsjs/requests",
    "author": "azandrew-sidoine",
    "main": "dist/index.js",
    "module": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "ts-build build",
        "lint": "ts-build lint",
        "prepare": "git config core.hookspath .githooks && ts-build build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "test": "jest",
        "betterer": "betterer --strict",
        "prettier": "prettier --write src/**/*"
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/types/index.d.mts",
                "default": "./dist/esm/index.mjs"
            },
            "require": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/cjs/index.cjs"
            }
        }
    },
    "size-limit": [
        {
            "path": "dist/cjs/index.cjs",
            "limit": "10 KB"
        },
        {
            "path": "dist/esm/index.mjs",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@azlabsjs/ts-build": "^0.4.21",
        "size-limit": "^11.1.4",
        "@size-limit/preset-small-lib": "^11.1.4",
        "@types/busboy": "^1.5.0",
        "@types/jest": "^28.1.4",
        "@types/node": "^18.0.1",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "busboy": "^1.6.0",
        "husky": "^8.0.1",
        "jest": "^28.1.2",
        "jest-watch-typeahead": "^1.1.0",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.5",
        "tslib": "^2.4.0",
        "typescript": "^4.7.4"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/@azlabsjs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/azlabsjs/requests.git"
    },
    "optionalDependencies": {
        "@azlabsjs/node-fetch-polyfill": "^0.1.0"
    },
    "dependencies": {
        "@azlabsjs/node-fetch-polyfill": "^0.1.0"
    }
}
